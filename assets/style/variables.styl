$body-font-family := Lato, -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen-Sans,Ubuntu,Cantarell,"Helvetica Neue",sans-serif;

$font-size-root := 16px;

// $heading-font-family := 'Mate SC', -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen-Sans,Ubuntu,Cantarell,"Helvetica Neue",sans-serif;

$button-font-weight := 700
// $body-bg = #EFEBE9;


// Spacing
// ============================================================
$spacer := 16px
$spacer-x := $spacer
$spacer-y := $spacer
$spacers := {
  zero: {
    x: 0,
    y: 0
  },
  one: {
    x: ($spacer-x * .25),
    y: ($spacer-y * .25)
  },
  two: {
    x: ($spacer-x * .5),
    y: ($spacer-y * .5)
  },
  three: {
    x: $spacer-x,
    y: $spacer-y
  },
  four: {
    x: ($spacer-x * 2),
    y: ($spacer-y * 2)
  },
  five: {
    x: ($spacer-x * 4),
    y: ($spacer-y * 4)
  }
}

$shadow-key-umbra-opacity := rgba(0,0,0, .08)
$shadow-key-penumbra-opacity := rgba(47,10,0, .1)
$shadow-key-ambient-opacity := rgba(0,0,0, .06)

@require '~vuetify/src/stylus/settings/_variables.styl'
